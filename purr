        '{'
            $set_stream_error
            $set_header_error
            $set_slock_off
        '} &'
    ')+reload('
        $inject_empty_line
        $load_input_stream
    ")+transform-header("
        $load_generic_header
    ")+first+$default_command_suite"
)
