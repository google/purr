# Bind: ctrl-w, send a cache wipe request to logcat.
wipe_cmd=(
    'execute-silent('
        $stop_stream
        "serial=\$(cat $purr_serial_cache);"
        'adb -s $serial logcat -c;'
        $set_slock_off
        "echo 'wipe' > $purr_accept_command_cache;"
        $save_current_query
        $start_stream
    ')+accept'
)
